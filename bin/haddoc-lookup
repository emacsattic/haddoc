#!/usr/bin/env python

"""haddoc-lookup <search-term> [<search-term> ...]

Lookup some search terms in the Python documentation indexes.
"""

import sys
import haddoc

def main():
    import optparse
    parser = optparse.OptionParser(__doc__.strip())
    haddoc.add_options(parser)
    opts, args = parser.parse_args()

    if not args:
        parser.error("You need to specify some search terms.")
    
    haddoc.lookup_print(opts.haddoc_database, args, sys.stdout)

if __name__ == '__main__':
    main()


